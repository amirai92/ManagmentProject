
@model WebApplication3.Models.LookingAd

@{
    /**/

    ViewBag.Title = "LookingPublish";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<h2>Looking ad publish</h2>
<hr />

@using (Html.BeginForm("LookingPublish", "Employee", FormMethod.Post))

{
    <div class="form-group row">
        <label for="inputID" class="col-sm-2 col-form-label">ID</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.ID, new { @class = "form-control", id = "inputID" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.ID)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputFirstName" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", id = "inputFirstName" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.FirstName)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputLastName" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", id = "inputLastName" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.LastName)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputPhone" class="col-sm-2 col-form-label">Phone</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", id = "inputPhone" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.Phone)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "inputEmail" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.Email)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputIntellectual" class="col-sm-2 col-form-label">Intellectual</label>
        <div class="col-sm-10">
            @Html.CheckBoxFor(m => m.Intellectual, new { @class = "form-control", id = "inputIntellectual" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.Intellectual)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputMentalIllness" class="col-sm-2 col-form-label">MentalIllness</label>
        <div class="col-sm-10">
            @Html.CheckBoxFor(m => m.MentalIllness, new { @class = "form-control", id = "inputMentalIllness" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.MentalIllness)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputSensory" class="col-sm-2 col-form-label">Sensory</label>
        <div class="col-sm-10">
            @Html.CheckBoxFor(m => m.Sensory, new { @class = "form-control", id = "inputSensory" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.Sensory)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputPhysical" class="col-sm-2 col-form-label">Physical</label>
        <div class="col-sm-10">
            @Html.CheckBoxFor(m => m.Physical, new { @class = "form-control", id = "inputPhysical" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.Physical)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputCv" class="col-sm-2 col-form-label">Cv</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Cv, new { @class = "form-control", id = "inputCv" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.Cv)</small>
        </div>
    </div>


    <input id="role" name="role" type="hidden" value="LookingAd" />
    <input class="btn btn-outline-primary" id="submit" type="submit" value="Looking ad publish" />
    <h4 class="text-danger">@ViewBag.message</h4>
}
