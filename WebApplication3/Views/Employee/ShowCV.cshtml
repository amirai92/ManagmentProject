@model WebApplication3.ViewModel.VM

@{
    ViewBag.Title = "ShowCV";
}

<h1>Resume</h1><br /><br /><br />

<h2>Personal Details</h2><br /><br />
<table class="table" id="LookingTable">

    <tr>
        <td>First Name: </td>
        <td>@Model.Pd.FirstName</td>
    </tr>

    <tr>
        <td>Last Name: </td>
        <td>@Model.Pd.LastName</td>
    </tr>

    <tr>
        <td>ID Number: </td>
        <td>@Model.Pd.ID</td>
    </tr>

    <tr>
        <td>Date of birth: </td>
        <td>@Model.Pd.DateOfBirth</td>
    </tr>

    <tr>
        <td>Home Address: </td>
        <td>@Model.Pd.Address</td>
    </tr>

    <tr>
        <td>Phone Number: </td>
        <td>@Model.Pd.Tel</td>
    </tr>

    <tr>
        <td>Email: </td>
        <td>@Model.Pd.Email</td>
    </tr>

    <tr>
        <td>Skills: </td>
        <td>@Model.Pd.Skills</td>
    </tr>

    <tr>
        <td>Summary: </td>
        <td>@Model.Pd.Summary</td>
    </tr>

</table>

@if (@Model.Langs.Lang)
{
    <br /><br /><br />
    <h2>Languages</h2><br /><br />
    <table class="table" id="LookingTable">

        @if (Model.Langs.VeryGood != null)
        {
        <tr>
            <td>Native Level Languages: </td>
            <td>@Model.Langs.VeryGood</td>
        </tr>
        }

        @if (Model.Langs.Good != null)
        {
        <tr>
            <td>Good Level Languages: </td>
            <td>@Model.Langs.Good</td>
        </tr>      
        }

        @if (Model.Langs.Basic != null)
        {
        <tr>
            <td>Basic Level Languages: </td>
            <td>@Model.Langs.Basic</td>
        </tr>
        }

    </table>


}



@if (Model.Educ.Educ)
{
    <br /><br /><br />
    <h2>Education</h2><br /><br />
    <table class="table" id="LookingTable">

        @if (Model.Educ.Uni)
        {
            <tr>
                <td>Institute</td>
                <td><b>@Model.Educ.InstituteUniversity</b></td>
            </tr>
            <tr>
                <td>@Model.Educ.TitleOfDiploma </td>
                <td>@Model.Educ.Degree</td>
             </tr>
             <tr>
                <td>@Model.Educ.UniFromYear - @Model.Educ.UniToYear</td>

            </tr>
        }


        @if (Model.Educ.School)
        {
            <tr>
                <td>School Name </td>
                <td><b>@Model.Educ.SchoolName</b></td>
            </tr>
            <tr>
                <td>@Model.Educ.SchoolFromYear - @Model.Educ.SchoolToYear</td>
            </tr>
        }

        @if (Model.Educ.Course)
        {
            <tr>
                <td>@Model.Educ.CourseFromYear</td>
                <td>Course Name </td>
                <td><b>@Model.Educ.CourseName</b></td>
            </tr>
        }


    </table>


}




@if (Model.VolunteerNhobbies.Volunteer )
