@model WebApplication3.Models.WantedAd

@{
    /**/

    ViewBag.Title = "WantedPublish";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<h2>Wanted ad publish</h2>
<hr />

@using (Html.BeginForm("Desc", "Employer", FormMethod.Post))

    {
        <div class="form-group row">
            <label for="inputDescription" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control", id = "inputDescription" })
                <small class="text-danger">@Html.ValidationMessageFor(x => x.Description)</small>
            </div>
        </div>


        <input id="role" name="role" type="hidden" value="WantedAd" />
        <input class="btn btn-outline-primary" id="submit" type="submit" value="Wanted ad publish" />
    }