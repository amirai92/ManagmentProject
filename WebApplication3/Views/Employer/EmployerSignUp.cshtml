
@model WebApplication3.Models.Employer
@{
    ViewBag.Title = "UserRegister";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<h2>Employer SignUp</h2>
<hr />

@using (Html.BeginForm("EmployerSignUp", "Employer", FormMethod.Post))
{
    <div class="form-group row">
        <label for="inputUserName" class="col-sm-2 col-form-label">User Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", id = "inputUserName" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.UserName)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "inputPassword" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.Password)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputFirstName" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", id = "inputFirstName" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.FirstName)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputLastName" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", id = "inputLastName" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.LastName)</small>
        </div>
    </div>
    <input id="role" name="role" type="hidden" value="User" />
    <input class="btn btn-outline-primary" id="submit" type="submit" value="Add User" />
    <h4 class="text-danger">@ViewBag.message</h4>
}

